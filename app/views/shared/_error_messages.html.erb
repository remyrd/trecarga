<%if @user.errors.any? %>
	<div id="error explanation">
		<div class="alert alert-error">
			Se han generado errores <%pluralize(@user.errors.count, "error")%>errores.
		</div>
		<ul>
		<% @user.errors.full_messages.each do |m| %>
			<li>* <%= m %></li>
		<%end%>
		</ul>
	</div>
<%end%>

