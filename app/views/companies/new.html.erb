<% provide(:title, 'New company') %>
<h1>New company</h1>

<div class="row">
 <div class="span6 offset3">
   <%= form_for(@company) do |f| %>
     
		<%= f.label :name %>
      <%= f.text_field :name %>
<br>
	<%= f.label :typo %>
	<%= f.text_field :typo %>

<br>	
      <%= f.label :address %>
      <%= f.text_field :address %>
<br>
      <%= f.label :city %>
      <%= f.text_field :city %>
<br>
		<%= f.label :country %>
      <%= f.text_field :country %>
<br>
		<%= f.label :phone %>
      <%= f.text_field :phone %>
<br>
		<%= f.label :cellphone %>
      <%= f.text_field :cellphone %>
<br>      
		<%= f.label :email %>
      <%= f.text_field :email %>
<br>
	    <%= f.submit "Create company", class: "btn btn-large btn-primary" %>
	 <% end %>
	</div>
</div>