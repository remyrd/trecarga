<% provide(:title, 'New company') %>
<h1>New company</h1>

<div class="row">
 <div class="span6 offset3">
   <%= form_for(@company) do |f| %>
     
		<%= f.label :name %>
      <%= f.text_field :name %>

	<%= f.label :typo %>
	<%= f.text_field :typo %>

	
      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

		<%= f.label :country %>
      <%= f.text_field :country %>

		<%= f.label :phone %>
      <%= f.text_field :phone %>

		<%= f.label :cellphone %>
      <%= f.text_field :cellphone %>
      
		<%= f.label :email %>
      <%= f.text_field :email %>
	    <%= f.submit "Create company", class: "btn btn-large btn-primary" %>
	 <% end %>
	</div>
</div>