<% provide(:title, 'New account') %>
<h1>New account, created by <%= @current_user.name %> for <%= @current_user.company_name%></h1>

<div class="row">
 <div class="span6 offset3">
   <%= form_for(@account) do |f| %>
     
	<%= f.label :group_name %>
	<% groups_array = Group.where(company_name: @current_user.company_name).map {|group| group.name}%>
    <%= f.select(:group_name,options_for_select(groups_array)) %>

	<%= f.label :name %>
    <%= f.text_field :name %>
    
	<%= f.label :description %>
	<%= f.text_field :description %>
      
	<%= f.submit "Create account", class: "btn btn-large btn-primary" %>
<% end %>
	</div>
</div>