<% provide(:title, 'All accounts') %>
<h1>All accounts on <%= @current_user.company_name %></h1>

<ul class="accounts">
  <% @accounts.each do |account| %>
    <li>
      <%= link_to account.name, account %>
      <%= link_to account.group_name, account%>
      <%= link_to account.description, account%>
      <%= link_to 'Edit', edit_account_path(account)%>
    </li>
  <% end %>
</ul>