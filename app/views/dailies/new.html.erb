<% provide(:title, 'New daily') %>
<h1>New daily for <%= @current_user.company_name %></h1>

<div class="row">
 <div class="span6 offset3">
   <%= form_for(@daily) do |f| %>
     
	<%= f.label :date %>
    <%= f.text_field :date %>

	<%= f.label :account_name %>
	<% accounts_array = Account.where(company_name: @current_user.company_name).map {|account| account.name}%>
	<%= f.select(:account_name, options_for_select(accounts_array)) %>

    <%= f.label :glosa %>
    <%= f.text_field :glosa %>

	<%= f.label :exchange %>
    <%= f.select(:exchange, options_for_select([['BoB Boliviano', 'BoB Boliviano'], ['$ Dollar', '$ Dollar'], ['€ Euro', '€ Euro']])) %>

    <%= f.label :debe %>
    <%= f.text_field :debe %>

	<%= f.label :haber %>
    <%= f.text_field :haber %>

	<%= f.label :tran_type %>
    <%= f.select(:tran_type, options_for_select([['Debito', 1], ['Credito', 2], ['Activo', 3], ['Pasivo', 4]])) %>
      
	<%= f.submit "Create company", class: "btn btn-large btn-primary" %>
<% end %>
	</div>
</div>